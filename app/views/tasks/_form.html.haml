= form_with(model: [@board, task], local: true) do |f|
    .field
        = f.label :eyecatch, 'Eyecatch'
    %div
        = f.file_field :eyecatch
    .field
        = f.label :title, 'Name'
    %div
        = f.text_field :title, class: 'text'
    .field
        = f.label :content, 'Description'
    %div
        = f.text_area :content, class: 'textarea'
    .field
        = f.label :deadline, 'Deadline'
    %div
        = f.datetime_field :deadline, class: 'datetime'
    = f.submit 'Submit', class: 'btn-primary'